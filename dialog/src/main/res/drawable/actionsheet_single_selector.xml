<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/act_sel_bg" />
            <corners android:radius="@dimen/jiaodu" />
            <stroke android:width="0.1dp" android:color="@color/act_line" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/act_def_bg" />
            <corners android:radius="@dimen/jiaodu" />
            <stroke android:width="0.1dp" android:color="@color/act_line" />
        </shape>
    </item>

</selector>